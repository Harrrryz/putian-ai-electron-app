{
  "name": "putian-ai-electron-app",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.0",
  "private": true,
  "type": "module",
  "author": "Harrrrz <dev@local.test>",
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "package": "npm run compile",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "lint": "npm run lint --workspace @app/renderer",
    "start": "node packages/dev-mode.js",
    "dev": "npm run dev --workspace @app/renderer",
    "typecheck": "npm run typecheck -ws --if-present",
    "openapi": "openapi-ts",
    "web": "npm run web --workspace @app/preload",
    "web:build": "npm run web:build --workspace @app/preload",
    "preview": "npm run preview --workspace @app/renderer",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.90.3",
    "@npmcli/map-workspaces": "5.0.3",
    "@playwright/test": "1.57.0",
    "@types/node": "25.0.9",
    "create-vite": "8.2.0",
    "electron": "39.2.7",
    "electron-builder": "26.4.0",
    "glob": "13.0.0",
    "playwright": "^1.57.0"
  },
  "dependencies": {
    "@app/main": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Harrrryz/putian-ai-electron-app.git"
  },
  "keywords": [
    "AI",
    "TODO",
    "Calendar"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Harrrryz/putian-ai-electron-app/issues"
  },
  "homepage": "https://github.com/Harrrryz/putian-ai-electron-app#readme"
}
